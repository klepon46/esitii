<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        tools:context="com.ggstudio.esitii.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:background="@drawable/gradient_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/img_logo_kab" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/row_padding_vertical"
                android:layout_marginRight="@dimen/row_padding_vertical"
                android:layout_marginTop="250dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/esitii_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/row_padding_vertical"
                        android:paddingRight="@dimen/row_padding_vertical"
                        android:text="e-siiti"
                        android:textColor="@color/end_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/esitii_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/esitii_title"
                        android:paddingLeft="@dimen/row_padding_vertical"
                        android:paddingRight="@dimen/row_padding_vertical"
                        android:text="@string/esitii"
                        app:layout_constraintTop_toBottomOf="@id/esitii_title" />

                    <Button
                        android:id="@+id/btn_read_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/esitii_desc"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/gradient_background"
                        android:text="Read more"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_regulasi"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgRegulasi"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgRegulasi"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Regulasi"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_sop"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="@dimen/left_card_margin">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgInformation"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgInformation"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Panduan"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_video"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="@dimen/left_card_margin">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgVideo"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgVideo"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Tutorial SIINas"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_other1"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgOther1"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgOther1"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Manual"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_other2"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="@dimen/left_card_margin">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/img_other2"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_other2"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Informasi Lain"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_other3"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="@dimen/left_card_margin">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/img_other3"
                            android:layout_width="@dimen/main_btn_width"
                            android:layout_height="@dimen/main_btn_height"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_other3"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Ask Me"
                            android:textSize="@dimen/card_text_size"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>


